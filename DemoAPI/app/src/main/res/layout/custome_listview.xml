<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <TextView
        android:textStyle="bold"
        android:id="@+id/titleLoan"
        android:text="Total Loan:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/contentLoan"
        android:layout_marginLeft="5dp"
        android:text="100.000.000"
        android:layout_toRightOf="@id/titleLoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/contentLoan"
        android:textStyle="bold"
        android:id="@+id/titleremainLoan"
        android:text="Remain Loan:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/contentRemainLoan"
        android:layout_marginLeft="5dp"
        android:text="50.000.000"
        android:layout_toRightOf="@id/titleremainLoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/titleLoan"
        android:textStyle="bold"
        android:id="@+id/titlestartDate"
        android:text="Start Date:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/contentstartDate"
        android:layout_marginLeft="5dp"
        android:text="13/10/1924"
        android:layout_toRightOf="@id/titlestartDate"
        android:layout_below="@id/contentLoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/contentstartDate"
        android:layout_below="@id/titleremainLoan"
        android:textStyle="bold"
        android:id="@+id/titleendDate"
        android:text="End Date:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/contentendDate"
        android:layout_marginLeft="5dp"
        android:text="13/10/1999"
        android:layout_below="@id/contentRemainLoan"
        android:layout_toRightOf="@id/titleendDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/titlestartDate"
        android:textStyle="bold"
        android:id="@+id/titleRate"
        android:text="Rating:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/contentrate"
        android:text="5.5"
        android:layout_toRightOf="@id/titleRate"
        android:layout_below="@id/contentstartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>
